root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 4

[*.java]
indent_size = 2
tab_width = 2
ij_continuation_indent_size = 2
ij_java_keep_simple_blocks_in_one_line = true
ij_java_keep_simple_lambdas_in_one_line = true
ij_java_keep_simple_classes_in_one_line = true
ij_java_keep_simple_methods_in_one_line = true
ij_java_case_statement_on_separate_line = false
ij_java_blank_lines_around_class = 0
ij_java_blank_lines_around_method = 0
ij_java_blank_lines_around_method_in_interface = 0
ij_java_blank_lines_around_field_in_interface = 0
ij_java_blank_lines_after_anonymous_class_header = 0
ij_java_blank_lines_around_field = 0
ij_java_blank_lines_before_method_body = 0
ij_java_method_annotation_wrap = off
ij_java_keep_multiple_expressions_in_one_line = true
ij_java_spaces_within_braces = true

[*.scala]
indent_size = 2
tab_width = 2
ij_continuation_indent_size = 2
ij_scala_align_multiline_parameters = false
ij_scala_align_multiline_parameters_in_calls = false
ij_scala_blank_lines_after_class_header = 0
ij_scala_blank_lines_around_field = 0
ij_scala_blank_lines_around_field_in_inner_scopes = 0
ij_scala_blank_lines_around_field_in_interface = 0
ij_scala_blank_lines_around_method = 0
ij_scala_blank_lines_around_method_in_inner_scopes = 0
ij_scala_blank_lines_around_method_in_interface = 0
ij_scala_keep_simple_blocks_in_one_line = true
ij_scala_keep_simple_methods_in_one_line = true

[*.kt]
indent_size = 2
tab_width = 2
ij_continuation_indent_size = 2
ij_kotlin_continuation_indent_for_chained_calls = false
ij_kotlin_continuation_indent_for_expression_bodies = false
ij_kotlin_continuation_indent_in_argument_lists = false
ij_kotlin_continuation_indent_in_elvis = false
ij_kotlin_continuation_indent_in_if_conditions = false
ij_kotlin_continuation_indent_in_parameter_lists = false
ij_kotlin_continuation_indent_in_supertype_lists = false
ij_kotlin_field_annotation_wrap = off
ij_kotlin_parameter_annotation_wrap = off
ij_kotlin_method_annotation_wrap = off

[*.xml]
indent_size = 2
tab_width = 2